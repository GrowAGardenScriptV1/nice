local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Screen GUI
local screenGui = Instance.new("ScreenGui", playerGui)
screenGui.Name = "TapToLoadUI"
screenGui.IgnoreGuiInset = true
screenGui.ResetOnSpawn = true

-- Background Frame
local bg = Instance.new("Frame", screenGui)
bg.Size = UDim2.new(1, 0, 1, 0)
bg.BackgroundColor3 = Color3.fromRGB(20, 20, 20)

-- Label: Tap to Load
local label = Instance.new("TextLabel", bg)
label.Size = UDim2.new(1, 0, 0, 100)
label.Position = UDim2.new(0, 0, 0.3, 0)
label.Text = "Tap to Load"
label.TextColor3 = Color3.fromRGB(255, 255, 255)
label.TextScaled = true
label.BackgroundTransparency = 1

-- Progress Bar Background
local barBg = Instance.new("Frame", bg)
barBg.Size = UDim2.new(0.6, 0, 0.05, 0)
barBg.Position = UDim2.new(0.2, 0, 0.5, 0)
barBg.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
barBg.BorderSizePixel = 0

-- Fill Bar
local fillBar = Instance.new("Frame", barBg)
fillBar.Size = UDim2.new(0, 0, 1, 0)
fillBar.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
fillBar.BorderSizePixel = 0

-- Percent Text
local percentText = Instance.new("TextLabel", bg)
percentText.Size = UDim2.new(1, 0, 0, 50)
percentText.Position = UDim2.new(0, 0, 0.58, 0)
percentText.Text = "0%"
percentText.TextColor3 = Color3.new(1,1,1)
percentText.TextScaled = true
percentText.BackgroundTransparency = 1

-- Tapping Logic
local currentProgress = 0
local increment = 10

local function updateBar()
    fillBar:TweenSize(UDim2.new(currentProgress / 100, 0, 1, 0), "Out", "Quad", 0.2, true)
    percentText.Text = tostring(currentProgress) .. "%"
end

bg.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.Touch or input.UserInputType == Enum.UserInputType.MouseButton1 then
        if currentProgress < 100 then
            currentProgress += increment
            if currentProgress > 100 then currentProgress = 100 end
            updateBar()

            if currentProgress >= 100 then
                -- Fade out UI
                for _, obj in pairs(screenGui:GetDescendants()) do
                    if obj:IsA("GuiObject") then
                        obj:TweenTransparency(1, "Out", "Quad", 1, true)
                    end
                end
                wait(1)
                screenGui:Destroy()
            end
        end
    end
end)

updateBar()
