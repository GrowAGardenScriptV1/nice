randomizeBtn.Position = UDim2.new(0.05, 0, 0, 40)
randomizeBtn.Text = "üé≤ Randomize Eggs"
randomizeBtn.BackgroundColor3 = Color3.fromRGB(50, 150, 255)
randomizeBtn.TextColor3 = Color3.new(1,1,1)
