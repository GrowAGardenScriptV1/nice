local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Create the UI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "TapToLoadUI"
screenGui.Parent = playerGui
screenGui.ResetOnSpawn = false

-- Background Frame
local bg = Instance.new("Frame")
bg.Size = UDim2.new(1, 0, 1, 0)
bg.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
bg.BackgroundTransparency = 0.5
bg.Parent = screenGui

-- Tap Button (transparent but clickable)
local tapButton = Instance.new("TextButton")
tapButton.Size = UDim2.new(1, 0, 1, 0)
tapButton.BackgroundTransparency = 1
tapButton.Text = ""
tapButton.Parent = bg

-- Red Loading Bar
local bar = Instance.new("Frame")
bar.Size = UDim2.new(0, 0, 0, 10)
bar.Position = UDim2.new(0.5, -150, 0.5, 40)
bar.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
bar.BorderSizePixel = 0
bar.Parent = bg

-- Tap to Load Text
local tapText = Instance.new("TextLabel")
tapText.Size = UDim2.new(0, 300, 0, 60)
tapText.Position = UDim2.new(0.5, -150, 0.5, -30)
tapText.Text = "TAP TO LOAD"
tapText.TextScaled = true
tapText.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
tapText.TextColor3 = Color3.fromRGB(255, 255, 255)
tapText.Font = Enum.Font.GothamBold
tapText.Parent = bg

-- Percent Text
local percentText = Instance.new("TextLabel")
percentText.Size = UDim2.new(0, 200, 0, 50)
percentText.Position = UDim2.new(0.5, -100, 0.5, 60)
percentText.Text = "0%"
percentText.TextScaled = true
percentText.BackgroundTransparency = 1
percentText.TextColor3 = Color3.fromRGB(255, 255, 255)
percentText.Font = Enum.Font.GothamBold
percentText.Parent = bg

-- Load Logic
local percent = 0

tapButton.MouseButton1Click:Connect(function()
	if percent < 100 then
		percent += 2
		bar.Size = UDim2.new(percent/100, 0, 0, 10)
		percentText.Text = percent .. "%"
	end

	if percent >= 100 then
		screenGui:Destroy()
	end
end)
