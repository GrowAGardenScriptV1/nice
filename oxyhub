local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Create GUI
local screenGui = Instance.new("ScreenGui", playerGui)
screenGui.Name = "PetSelectorUI"

-- Frame
local frame = Instance.new("Frame", screenGui)
frame.Size = UDim2.new(0, 300, 0, 200)
frame.Position = UDim2.new(0.5, -150, 0.5, -100)
frame.BackgroundColor3 = Color3.fromRGB(240, 240, 240)

-- Title
local title = Instance.new("TextLabel", frame)
title.Text = "Choose Your Pet"
title.Size = UDim2.new(1, 0, 0, 40)
title.BackgroundTransparency = 1
title.TextScaled = true

-- Function to create a button
local function createPetButton(petName, position)
    local button = Instance.new("TextButton", frame)
    button.Size = UDim2.new(0.8, 0, 0, 40)
    button.Position = UDim2.new(0.1, 0, 0, position)
    button.Text = petName
    button.BackgroundColor3 = Color3.fromRGB(200, 255, 200)
    button.TextScaled = true

    button.MouseButton1Click:Connect(function()
        print("Selected pet:", petName)
        title.Text = "You chose: " .. petName
        -- Here you can insert code to give the player the pet
    end)
end

-- Add Pet Buttons
createPetButton("Dog", 50)
createPetButton("Cat", 100)
createPetButton("Bunny", 150)
