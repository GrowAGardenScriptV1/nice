-- Toggle Logic
local autoRerollOn = false
autoRerollBtn.MouseButton1Click:Connect(function()
	autoRerollOn = not autoRerollOn
	autoRerollBtn.Text = "üîÅ Auto Reroll: " .. (autoRerollOn and "ON" or "OFF")
end)

local espOn = true
espBtn.MouseButton1Click:Connect(function()
	espOn = not espOn
	espBtn.Text = "üëÅÔ∏è ESP: " .. (espOn and "ON" or "OFF")
end)

