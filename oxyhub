local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui", playerGui)
screenGui.Name = "TapLoadingUI"
screenGui.IgnoreGuiInset = true
screenGui.ResetOnSpawn = false

-- Background Image
local bgImage = Instance.new("ImageLabel", screenGui)
bgImage.Size = UDim2.new(1, 0, 1, 0)
bgImage.Position = UDim2.new(0, 0, 0, 0)
bgImage.Image = "rbxassetid://IMAGE_ASSET_ID_HERE"  -- ðŸ›‘ Replace this!
bgImage.ScaleType = Enum.ScaleType.Stretch
bgImage.BackgroundTransparency = 1

-- Tap Button
local tapButton = Instance.new("TextButton", screenGui)
tapButton.Size = UDim2.new(0, 250, 0, 60)
tapButton.Position = UDim2.new(0.5, -125, 0.3, 0)
tapButton.Text = "TAP TO LOAD"
tapButton.Font = Enum.Font.GothamBold
tapButton.TextColor3 = Color3.new(1, 1, 1)
tapButton.BackgroundColor3 = Color3.fromRGB(255, 50, 50)
tapButton.TextScaled = true
tapButton.AutoButtonColor = false
tapButton.BorderSizePixel = 0
tapButton.BackgroundTransparency = 0.1
tapButton.ZIndex = 2

-- Percent Display
local percentLabel = Instance.new("TextLabel", screenGui)
percentLabel.Size = UDim2.new(0, 200, 0, 50)
percentLabel.Position = UDim2.new(0.5, -100, 0.55, 0)
percentLabel.Text = "0%"
percentLabel.Font = Enum.Font.GothamBlack
percentLabel.TextColor3 = Color3.new(1, 1, 1)
percentLabel.BackgroundTransparency = 1
percentLabel.TextScaled = true
percentLabel.ZIndex = 2

-- Fill Progress Bar
local barBack = Instance.new("Frame", screenGui)
barBack.Size = UDim2.new(0.5, 0, 0.02, 0)
barBack.Position = UDim2.new(0.25, 0, 0.62, 0)
barBack.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
barBack.BorderSizePixel = 0
barBack.ZIndex = 1

local fillBar = Instance.new("Frame", barBack)
fillBar.Size = UDim2.new(0, 0, 1, 0)
fillBar.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
fillBar.BorderSizePixel = 0

-- Tap Logic
local progress = 0
local increment = 2

local function updateUI()
    fillBar:TweenSize(UDim2.new(progress / 100, 0, 1, 0), "Out", "Quad", 0.2, true)
    percentLabel.Text = progress .. "%"
end

tapButton.MouseButton1Click:Connect(function()
    if progress < 100 then
        progress += increment
        if progress > 100 then progress = 100 end
        updateUI()

        if progress >= 100 then
            -- Fade out all GUI
            for _, obj in pairs(screenGui:GetDescendants()) do
                if obj:IsA("GuiObject") then
                    obj:TweenTransparency(1, "Out", "Quad", 1, true)
                end
            end
            wait(1.2)
            screenGui:Destroy()
        end
    end
end)

updateUI()
